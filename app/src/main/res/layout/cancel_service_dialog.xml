<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp50"
        android:id="@+id/sq_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbg">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20">
            <TextView
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp60"
                android:textColor="@color/heading_top"
                android:fontFamily="@font/robotobold"
                android:text="Cancel Service"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_marginTop="@dimen/dp20"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/robotoregular"
                android:text="Are you sure you want to cancel the Service?"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/robotoregular"
                    android:text="$10 Cancellation"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_marginStart="@dimen/dp5"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/robotoregular"
                    android:text="Fee will be Applied"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/agree_service"
                android:background="@drawable/get_service_btn"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/q_btn_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/robotoregular"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/continue_service"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/q_btn_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:fontFamily="@font/robotoregular"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Service">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp24"
        android:src="@drawable/cancel"
        android:layout_width="56dp"
        android:layout_height="56dp">
    </ImageView>
</RelativeLayout>