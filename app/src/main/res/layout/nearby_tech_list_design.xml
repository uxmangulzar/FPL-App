<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/cp_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tech_profile_img"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:src="@drawable/profile">
            </de.hdodenhof.circleimageview.CircleImageView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-16dp"
                android:layout_toRightOf="@+id/tech_profile_img"
                app:cardCornerRadius="360dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_msg"></ImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginTop="@dimen/dp16"
            android:layout_toRightOf="@+id/cp_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tech_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Usman"
                android:textColor="@color/cat_heading"
                android:textSize="18sp"></TextView>

            <RatingBar
                android:id="@+id/tech_rate"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:rating="5"></RatingBar>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tech_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotobold"
                android:text="2.4 Miles Away"
                android:textColor="@color/cat_heading"
                android:textSize="12sp"></TextView>

            <RelativeLayout
                android:layout_gravity="end"
                android:id="@+id/chat_btn"
                android:layout_width="82dp"
                android:layout_height="@dimen/dp25"
                android:layout_marginTop="@dimen/dp7"
                android:background="@drawable/ticket_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/robotobold"
                    android:text="Chat Now"
                    android:textColor="#F05A29"
                    android:textSize="10sp"></TextView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>