<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp16"
        android:paddingEnd="@dimen/dp16"

        tools:context=".ui.fragment.SettingFragment">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/u_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:text="Usman"
                    android:textColor="@color/heading_top"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/u_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:text="admin@admin.com"
                    android:textColor="@color/gray"
                    android:textSize="12sp"></TextView>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp53"
                android:layout_alignParentEnd="true"
                android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp25"
                android:layout_marginEnd="@dimen/dp25"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp20"
                android:paddingBottom="@dimen/dp20">

                <RelativeLayout
                    android:id="@+id/personal_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/p_img"
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:src="@drawable/ic_p_user"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_toRightOf="@+id/p_img"
                        android:fontFamily="@font/robotomedium"
                        android:text="Personal Information"
                        android:textColor="@color/heading_top"
                        android:textSize="@dimen/sp18"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/robotomedium"
                        android:text="Edit"
                        android:textColor="@color/s_primary_color"
                        android:textSize="@dimen/sp18"></TextView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="Full Name"
                        android:textColor="@color/heading_top"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/etName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="Usman"
                        android:textAlignment="textEnd"
                        android:textColor="@color/setting_name"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="Email Address"
                        android:textColor="@color/heading_top"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="Usman@gmail.com"
                        android:textAlignment="textEnd"
                        android:textColor="@color/setting_name"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="Mobile No"
                        android:textColor="@color/heading_top"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/etMobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="+92 3161749852"
                        android:textAlignment="textEnd"
                        android:textColor="@color/setting_name"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="Home Address"
                        android:textColor="@color/heading_top"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/etAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="124 Street, North Calif..."
                        android:textAlignment="textEnd"
                        android:textColor="@color/setting_name"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="Work Address"
                        android:textColor="@color/heading_top"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/etAddressSelect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotoregular"
                        android:text="124 Street, North Calif..."
                        android:textAlignment="textEnd"
                        android:textColor="@color/setting_name"
                        android:textSize="15sp"></TextView>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_marginTop="@dimen/dp16"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/rely_password_change"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/l_img"
                    android:layout_width="@dimen/dp14"
                    android:layout_height="@dimen/dp14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp28"
                    android:src="@drawable/ic_locked"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp24"
                    android:layout_toRightOf="@+id/l_img"
                    android:fontFamily="@font/robotobold"
                    android:text="Password Change"
                    android:textColor="@color/heading_top"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Edit"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp12"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/cvSignOut"
            android:layout_marginTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/robotoregular"
                android:text="Sign Out"
                android:textColor="@color/heading_top"
                android:textSize="18sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cvDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dp80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/robotoregular"
                android:text="Delete Account"
                android:textColor="@color/red_color"
                android:textSize="18sp"></TextView>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>