<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/sq_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardbg">

            <RelativeLayout
                android:id="@+id/cancel_dialog"
                android:layout_width="@dimen/dp50"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp12">

                <ImageButton
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="16dp"
                    android:src="@drawable/ic_round_close_24" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp16"
                android:fontFamily="@font/brotherbold"
                android:text="Change Personal Information"
                android:textColor="@color/qty_color"
                android:textSize="16sp"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/q_btn_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sq_layout"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp16"
            android:paddingEnd="@dimen/dp16"
            android:paddingBottom="@dimen/dp16">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etFullName"
                    style="@style/join_fpl_bottomsheet_edittext_style"
                    android:background="@drawable/edittext_join_fpl"
                    android:hint="Full Name *"
                    android:inputType="text"
                    android:paddingStart="@dimen/dp20"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp16"></EditText>

                <EditText

                    android:id="@+id/etEmail"
                    style="@style/join_fpl_bottomsheet_edittext_style"
                    android:background="@drawable/edittext_join_fpl"
                    android:hint="Email *"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/dp20"
                    android:layout_width="0dp"
                    android:layout_weight="1"></EditText>
            </LinearLayout>


            <EditText
                android:id="@+id/etMobile"
                style="@style/join_fpl_bottomsheet_edittext_style"
                android:background="@drawable/edittext_join_fpl"
                android:hint="Mobile *"
                android:inputType="number"
                android:paddingStart="@dimen/dp20"></EditText>
            <EditText
                android:id="@+id/etHomeAddress"
                style="@style/join_fpl_bottomsheet_edittext_style"
                android:background="@drawable/edittext_join_fpl"
                android:hint="Home Address *"
                android:inputType="text"
                android:paddingStart="@dimen/dp20"></EditText>
            <EditText
                android:id="@+id/etWorkAddress"
                style="@style/join_fpl_bottomsheet_edittext_style"
                android:background="@drawable/edittext_join_fpl"
                android:hint="Work Address *"
                android:inputType="text"
                android:paddingStart="@dimen/dp20"></EditText>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/tvSave"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_below="@+id/q_btn_lay"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginEnd="@dimen/dp24"
                    android:layout_weight="1"
                    android:background="@drawable/button_add_ticket">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/robotobold"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="18sp"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tvNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_below="@+id/q_btn_lay"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_colorfull_join_fpl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/robotobold"
                        android:text="Cancel"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"></TextView>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>