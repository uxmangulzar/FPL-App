        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp30">

            <ImageView
                android:layout_width="@dimen/dp37"
                android:layout_height="31dp"
                android:layout_marginTop="@dimen/dp60"
                android:src="@drawable/ic_store_dark"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp21"
                android:fontFamily="@font/robotobold"
                android:text="Start Selling Now!"
                android:textColor="@color/heading_top"
                android:textSize="@dimen/sp20"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/robotoregular"
                android:text="In 3 Simple Steps:"
                android:textColor="@color/gray"
                android:textSize="15sp"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp7"
                    android:layout_height="@dimen/dp7"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp17"
                    android:src="@drawable/ic_dark_bullet"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp13"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Create your Store"
                    android:textColor="@color/gray"
                    android:textSize="15sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp17"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp7"
                    android:layout_height="@dimen/dp7"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp17"
                    android:src="@drawable/ic_dark_bullet"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp13"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Customize products and Services"
                    android:textColor="@color/gray"
                    android:textSize="15sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp17"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp7"
                    android:layout_height="@dimen/dp7"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp17"
                    android:src="@drawable/ic_dark_bullet"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp13"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Set your Price"
                    android:textColor="@color/gray"
                    android:textSize="15sp"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/yourtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp19"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/gray"
                android:textSize="15sp"></TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_above="@+id/btm_View"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp67"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/create_store_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp13"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/button_add_ticket">

                <TextView
                    android:id="@+id/txt_online_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/robotoregular"
                    android:text="Start Creating your Store"
                    android:textColor="@color/white"
                    android:textSize="15sp"></TextView>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/btm_View"
            android:layout_alignParentBottom="true"
            android:background="@color/viewbg"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
    </RelativeLayout>
