<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/nbt_rel_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/nbtt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/robotobold"
                    android:text="Nearby Technician"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"></TextView>

                <View
                    android:id="@+id/nbt_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:layout_below="@+id/nbtt"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@color/colorPrimary"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/inbox_rel_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/inbox_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/robotobold"
                    android:text="Inbox"
                    android:textColor="@color/heading_top"
                    android:textSize="16sp"></TextView>

                <View
                    android:id="@+id/inbox_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:layout_below="@+id/inbox_txt"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginEnd="@dimen/dp16"
                    android:background="@color/colorPrimary"
                    android:visibility="gone">

                </View>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/frame_container_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>