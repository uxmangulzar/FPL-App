<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        tools:context=".ui.activity.BookingDetailActivity">

        <RelativeLayout
            android:id="@+id/booking_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/dp16"
                android:paddingBottom="@dimen/dp16"
                android:paddingEnd="@dimen/dp16"
                android:paddingStart="@dimen/dp16"
                android:src="@drawable/ic_arrowback" />

            <TextView
                android:id="@+id/r_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/robotobold"
                android:text="#FXEXW6"
                android:textColor="@color/heading_top"
                android:textSize="22sp">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/d_p_layout"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@+id/booking_detail_toolbar"
            android:background="@color/progress_color">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp6"
                    android:fontFamily="@font/robotoregular"
                    android:text="In Progress...."
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"></TextView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/d_p_s_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d_p_layout"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp32"
            android:layout_marginEnd="@dimen/dp16"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp16"
                        android:fontFamily="@font/robotoregular"
                        android:text="Job Detail"
                        android:textColor="@color/heading_top"
                        android:textSize="@dimen/sp16"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginTop="@dimen/dp12"
                        android:background="@color/light_gray"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp18"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp16"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:id="@+id/req_main_rel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:id="@+id/req_service_img"
                                    android:layout_width="@dimen/dp44"
                                    android:layout_height="@dimen/dp41"
                                    android:src="@drawable/jd_sname"></ImageView>


                                <LinearLayout
                                    android:layout_width="108dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp15"
                                    android:layout_toRightOf="@+id/req_service_img"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotoregular"
                                        android:text="Service"
                                        android:textColor="@color/cat_heading"
                                        android:textSize="13sp"></TextView>

                                    <TextView
                                        android:id="@+id/rq_s_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotomedium"
                                        android:text="House Lockout"
                                        android:textColor="@color/cat_heading"
                                        android:textSize="15sp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:id="@+id/gg_req_service_img"
                                    android:layout_width="@dimen/dp44"
                                    android:layout_height="@dimen/dp41"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/jd_tname"></ImageView>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp15"
                                    android:layout_toRightOf="@+id/gg_req_service_img"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotoregular"
                                        android:text="Service"
                                        android:textColor="@color/cat_heading"
                                        android:textSize="13sp"></TextView>

                                    <TextView
                                        android:id="@+id/rq_s_cat_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotomedium"
                                        android:text="Residential"
                                        android:textColor="@color/cat_heading"
                                        android:textSize="15sp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp20"
                            android:fontFamily="@font/robotoregular"
                            android:text="Service Charges"
                            android:textColor="@color/cat_heading"
                            android:textSize="@dimen/sp18"></TextView>

                        <RelativeLayout
                            android:layout_width="140dp"
                            android:layout_height="34dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp20"
                            android:background="@drawable/black_rounded_btn">

                            <TextView
                                android:id="@+id/rq_s_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="$5000"
                                android:textColor="@color/heading_top"
                                android:textSize="15sp"></TextView>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/td_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d_p_s_layout"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="199dp"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp16"
                        android:fontFamily="@font/robotoregular"
                        android:text="Technician Details"
                        android:textColor="@color/heading_top"
                        android:textSize="@dimen/sp16"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginTop="@dimen/dp12"
                        android:background="@color/light_gray"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp18"
                        android:layout_marginEnd="@dimen/dp20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/s_req_ser_img_card"
                                    android:layout_width="@dimen/dp44"
                                    android:layout_height="@dimen/dp44"
                                    android:elevation="0dp"
                                    app:cardCornerRadius="@dimen/dp5">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/tech_image"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/profile"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"></ImageView>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp15"
                                    android:layout_toRightOf="@+id/s_req_ser_img_card"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotoregular"
                                        android:text="Technician Name"
                                        android:textColor="@color/heading_top"
                                        android:textSize="13sp"></TextView>

                                    <TextView
                                        android:id="@+id/tech_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp8"
                                        android:fontFamily="@font/robotoregular"
                                        android:text="Muhammad Farid"
                                        android:textColor="@color/cat_heading"
                                        android:textSize="15sp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp24"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp16"
                            android:layout_weight="1.1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:id="@+id/c_req_service_img"
                                    android:layout_width="@dimen/dp44"
                                    android:layout_height="@dimen/dp41"
                                    android:src="@drawable/jd_sname"></ImageView>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp15"
                                    android:layout_toRightOf="@+id/c_req_service_img"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotoregular"
                                        android:text="Jobs Completed"
                                        android:textColor="@color/heading_top"
                                        android:textSize="13sp"></TextView>

                                    <TextView
                                        android:id="@+id/job_complete"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotomedium"
                                        android:text="0 Jobs Completed"
                                        android:textColor="@color/cat_heading"
                                        android:textSize="14sp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp8"
                            android:layout_weight="1">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:id="@+id/jc_req_service_img"
                                    android:layout_width="@dimen/dp44"
                                    android:layout_height="@dimen/dp41"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/jd_complete"></ImageView>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp15"
                                    android:layout_toRightOf="@+id/jc_req_service_img"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotoregular"
                                        android:text="Completion Rate"
                                        android:textColor="@color/heading_top"
                                        android:textSize="13sp"></TextView>

                                    <TextView
                                        android:id="@+id/complete_ratio"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/robotomedium"
                                        android:text="100%"
                                        android:textColor="@color/cat_heading"
                                        android:textSize="14sp"></TextView>

                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/td_liner"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp16"
                        android:fontFamily="@font/robotoregular"
                        android:text="Location"
                        android:textColor="@color/heading_top"
                        android:textSize="@dimen/sp16"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginTop="@dimen/dp12"
                        android:background="@color/light_gray"></View>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp150"
                        android:layout_margin="@dimen/dp20"
                        app:cardCornerRadius="@dimen/dp20"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/map"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></ImageView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp20"
            android:layout_below="@+id/map_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp36"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/d_cancel_booking"
                android:background="@drawable/ticket_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp50"
                android:layout_marginEnd="@dimen/dp16"
                android:layout_weight="1">
                <TextView
                    android:textColor="#F05A29"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel Booking">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/d_chat_booking"
                android:background="@drawable/submit_review_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp50"
                android:layout_marginEnd="@dimen/dp16"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat Technician">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>