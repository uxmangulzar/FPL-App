<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/brotherbold"
            android:text="Getting Started"
            android:textColor="@color/black"
            android:textSize="25sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp17"
            android:fontFamily="@font/robotoregular"
            android:text="Signup to Continue using FPL"
            android:textColor="@color/gray"
            android:textSize="15sp"></TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/select_state"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="@dimen/dp30"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15"
                        android:fontFamily="@font/robotomedium"
                        android:text="Please Select State"
                        android:textColor="@color/gray"
                        android:textSize="13sp"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp11"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp24"
                            android:layout_height="@dimen/dp24"
                            android:src="@drawable/ic_flag"></ImageView>

                        <TextView
                            android:id="@+id/at_topic_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp16"
                            android:fontFamily="@font/robotomedium"
                            android:text="Albama"
                            android:textColor="@color/cat_heading"
                            android:textSize="18sp"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/dp50"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_expand_more_24"></ImageView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_margin="@dimen/dp22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp2">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/p_img"
                    android:layout_width="@dimen/dp24"
                    android:layout_height="@dimen/dp24"
                    android:src="@drawable/ic_p_user"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp20"
                    android:layout_toRightOf="@+id/p_img"
                    android:fontFamily="@font/robotomedium"
                    android:text="Personal Information"
                    android:textColor="@color/heading_top"
                    android:textSize="@dimen/sp18">
                </TextView>
                </RelativeLayout>
                <EditText
                    style="@style/join_fpl_edittext_style"
                    android:background="@drawable/edittext_join_fpl"
                    android:hint="First Name *"
                    android:paddingStart="@dimen/dp20"
                    android:id="@+id/fname">
                </EditText>
                <EditText
                    style="@style/join_fpl_edittext_style"
                    android:background="@drawable/edittext_join_fpl"
                    android:hint="Last Name *"
                    android:paddingStart="@dimen/dp20"
                    android:id="@+id/lname">
                </EditText>
                <EditText
                    style="@style/join_fpl_edittext_style"
                    android:background="@drawable/edittext_join_fpl"
                    android:hint="Company Name (If any)"
                    android:paddingStart="@dimen/dp20"
                    android:id="@+id/company_name">
                </EditText>
                <EditText
                    style="@style/join_fpl_edittext_style"
                    android:background="@drawable/edittext_join_fpl"
                    android:hint="USA ID (Passport, State ID or Driver License) *"
                    android:paddingStart="@dimen/dp20"
                    android:id="@+id/usa_id">
                </EditText>
                <EditText
                    style="@style/join_fpl_edittext_style"
                    android:background="@drawable/edittext_dark_join_fpl"
                    android:hint="Upload ID *"
                    android:paddingStart="@dimen/dp20"
                    android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
                    android:paddingEnd="@dimen/dp20"
                    android:editable="false"
                    android:id="@+id/upload_id"
                    android:focusableInTouchMode="false"
                    >
                </EditText>
                <EditText
                    style="@style/join_fpl_edittext_style"
                    android:background="@drawable/edittext_join_fpl"
                    android:hint="Locksmith License Number *"
                    android:paddingStart="@dimen/dp20"
                    android:drawableRight="@drawable/ic_baseline_error_outline_24"
                    android:paddingEnd="@dimen/dp20"
                    android:id="@+id/license_number">
                </EditText>
                <EditText
                    style="@style/join_fpl_edittext_style"
                    android:background="@drawable/edittext_dark_join_fpl"
                    android:hint="Upload Locksmith License *"
                    android:paddingStart="@dimen/dp20"
                    android:drawableEnd="@drawable/ic_baseline_cloud_upload_24"
                    android:paddingEnd="@dimen/dp20"
                    android:editable="false"
                    android:id="@+id/upload_license"
                    android:focusableInTouchMode="false">
                </EditText>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp40"
            android:id="@+id/submit_fpl"
            android:background="@drawable/ticket_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:fontFamily="@font/robotobold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>